<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#c2caac"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="2dp">

        <ImageView
            android:id="@+id/iv_landmark"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="2dp" />

        <TextView
            android:id="@+id/tv_landmarkName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/cb_visited"
            android:layout_toEndOf="@+id/iv_landmark"
            android:layout_toRightOf="@+id/iv_landmark"
            android:textColor="#ffff"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/cb_visited"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/cb_visited"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="2dp"
            android:layout_centerVertical="true" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
